<tr>
	<% if (withType) { %>
		<% if(event.eventType === 'food'){ %>
			<td>Comida</td>
		<% } else if (event.eventType === 'diaper') { %>
			<td>Pañales</td>
		<% } else if (event.eventType === 'others') { %>
			<td>Otros</td>
		<% } %>
	<% } %>
	<% if(event.eventClass === 'boob'){ %>
		<td>Teta</td>
	<% } else if (event.eventClass === 'bottle') { %>
		<td>Biberón</td>
	<% } else if (event.eventClass === 'pee') { %>
		<td>Pis</td>
	<% } else if (event.eventClass === 'poo') { %>
		<td>Caca</td>
	<% } else if (event.eventClass === 'vitamin') { %>
		<td>Vitaminas</td>
	<% } else if (event.eventClass === 'medicine') { %>
		<td>Medicina</td>
	<% } else if (event.eventClass === 'vomit') { %>
		<td>Vómito</td>
	<% } %>
	<td>
		<% if (event.eventAmount !== null) { %>
			<% if (event.eventType === 'diaper') { %>
				<% if (event.eventAmount === 0) { %>
					Poco
				<% } else if (event.eventAmount === 1) { %>
					Normal
				<% } else if (event.eventAmount === 2) { %>
					Mucho
				<% } %>
			<% } else { %>
				<%= event.eventAmount %>
				<% if(event.eventClass === 'boob'){ %>
					min
				<% } else if (event.eventClass === 'bottle') { %>
					ml
				<% } %>
			<% } %>
		<% } else { %>
			&nbsp;
		<% } %>
	</td>
	<td><%= moment(event.date).tz('Europe/Madrid').format('DD/MM/YYYY HH:mm') %></td>
	<td><%= event.comment %></td>
	<td>
		<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal_<%= event.id %>" title="Borrar evento">
			<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
		</button>
		<div class="modal fade bs-example-modal-sm" id="myModal_<%= event.id %>" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
			<form action="/babies/deleteEvent" method="post">
				<input type="hidden" name="eventId" value="<%= event._id %>"/>
				<input type="hidden" name="babyId" value="<%= baby._id %>"/>
				<div class="modal-dialog modal-sm">
					<div class="modal-content">
						<div class="modal-header">
							<h4 class="modal-title">Confirmación</h4>
						</div>
						<div class="modal-body">
							¿Estás seguro?
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-default" data-dismiss="modal">No</button>
							<button type="submit" class="btn btn-primary">Si</button>
						</div>
					</div>
				</div>
			</form>
		</div>
	</td>
</tr>